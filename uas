<body>
    <div class="container">
        <h1>üõ°Ô∏è Sistem Login PBO</h1>
        
        <div id="successMsg" class="success-msg"></div>
        
        <!-- Form Login -->
        <div id="loginForm" class="login-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" placeholder="Masukkan username">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" placeholder="Masukkan password">
            </div>
            <button onclick="login()">üîê Login</button>
        </div>
        
        <!-- Dashboard User -->
        <div id="userDashboard" class="user-dashboard">
            <div class="user-info">
                <h2 id="greeting">Hai, <span id="currentUser"></span>! üëã</h2>
                <p><strong>Status:</strong> <span id="userRole"></span></p>
                <p><strong>ID Session:</strong> <span id="sessionId"></span></p>
            </div>
            <button class="logout-btn" onclick="logout()">üö™ Logout</button>
        </div>
    </div>

    <script>
        // Database Users (PBO - Class User)
        class User {
            constructor(id, username, password, role) {
                this.id = id;
                this.username = username;
                this.password = password;
                this.role = role;
            }
        }
        
        // Database Management (PBO - Class DatabaseManager)
        class DatabaseManager {
            constructor() {
                this.dbName = 'pbo_login_system';
                this.initDatabase();
            }
            
            initDatabase() {
                // Default users jika database kosong
                const defaultUsers = [
                    new User(1, 'user', 'user123', 'user'),
                    new User(2, 'admin', 'admin123', 'admin'),
                    new User(3, 'guest', 'guest', 'guest')
                ];
                
                const savedUsers = localStorage.getItem(this.dbName);
                if (!savedUsers) {
                    localStorage.setItem(this.dbName, JSON.stringify(defaultUsers));
                }
            }
            
            getUsers() {
                const data = localStorage.getItem(this.dbName);
                return data ? JSON.parse(data) : [];
            }
            
            authenticate(username, password) {
                const users = this.getUsers();
                return users.find(user => 
                    user.username === username && user.password === password
                );
            }
        }
        
        // Session Management (PBO - Class SessionManager)
        class SessionManager {
            constructor() {
                this.sessionKey = 'active_session';
            }
            
            setSession(user) {
                const sessionData = {
                    userId: user.id,
                    username: user.username,
                    role: user.role,
                    timestamp: new Date().getTime(),
                    sessionId: this.generateSessionId()
                };
                localStorage.setItem(this.sessionKey, JSON.stringify(sessionData));
                return sessionData;
            }
            
            getSession() {
                const session = localStorage.getItem(this.sessionKey);
                return session ? JSON.parse(session) : null;
            }
            
            destroySession() {
                localStorage.removeItem(this.sessionKey);
            }
            
            generateSessionId() {
                return 'sess_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
            }
        }
        
        // UI Controller (PBO - Class UIController)
        class UIController {
            constructor(dbManager, sessionManager) {
                this.db = dbManager;
                this.session = sessionManager;
                this.checkSession();
            }
            
            checkSession() {
                const session = this.session.getSession();
                if (session) {
                    this.showDashboard(session);
                }
            }
            
            showLoginForm() {
                document.getElementById('loginForm').style.display = 'block';
                document.getElementById('userDashboard').style.display = 'none';
                document.getElementById('successMsg').style.display = 'none';
            }
            
            showDashboard(session) {
                document.getElementById('loginForm').style.display = 'none';
                document.getElementById('userDashboard').style.display = 'block';
                
                document.getElementById('currentUser').textContent = session.username;
                document.getElementById('userRole').textContent = session.role.toUpperCase();
                document.getElementById('sessionId').textContent = session.sessionId;
                document.getElementById('greeting').textContent = `Hai, ${session.username}! üëã`;
            }
            
            showSuccess(msg) {
                const successDiv = document.getElementById('successMsg');
                successDiv.textContent = msg;
                successDiv.style.display = 'block';
                setTimeout(() => {
                    successDiv.style.display = 'none';
                }, 3000);
            }
        }
        
        // Global instances (Dependency Injection PBO)
        const database = new DatabaseManager();
        const sessionManager = new SessionManager();
        const uiController = new UIController(database, sessionManager);
        
        // Login function
        function login() {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value.trim();
            
            if (!username || !password) {
                alert('‚ö†Ô∏è Username dan password harus diisi!');
                return;
            }
            
            const user = database.authenticate(username, password);
            if (user) {
                const sessionData = sessionManager.setSession(user);
                uiController.showDashboard(sessionData);
                uiController.showSuccess(`‚úÖ Login berhasil sebagai ${user.role}!`);
            } else {
                alert('‚ùå Login gagal! Username atau password salah.');
                document.getElementById('password').value = '';
            }
        }
        
        // Logout function
        function logout() {
            sessionManager.destroySession();
            uiController.showLoginForm();
        }
        
        // Enter key support
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                login();
            }
        });
    </script>
</body>
